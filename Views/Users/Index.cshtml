
@using AspNetCoreIntro.Models;
@model IEnumerable<UserModel>;

@{
    ViewData["TitoloPagina"] = "Users 5B";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
    <a asp-controller="Users" asp-action="NewUser" class="text-decoration-none">
        <button type="button" class="btn btn-primary mb-3">Aggiungi Utente</button>
    </a>
    <div class="card">
        <div class="card-content">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th>Home</th>
                            <th>Cognome</th>
                            <th>Data Nascita</th>
                            <th>Luogo Nascita</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model) //Model è ciò che passo alla view
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.DateOfBirth.ToString("dd/mm/yy")</td>
                                <td>@item.Pob</td>  
                                <td>
                                    <a asp-controller="Users" asp-action="Detail" asp-route-id="@item.Id" class="text-decoration-none">
                                        <button type="button" class="btn btn-primary">
                                            Details
                                        </button>
                                    </a>
                                    <a asp-controller="Users" asp-action="DeleteUser" asp-route-id="@item.Id" class="text-decoration-none">
                                        <button type="button" class="btn btn-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </a>

                                </td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

